# Server Configuration
HOST=0.0.0.0
PORT=3000
BASE_URL=http://localhost:3000
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Database (SQLite - default for development, zero-config like original NodeCG)
DATABASE_URL=file:./nodecg.db

# For production with PostgreSQL (uncomment and configure)
# DATABASE_URL=postgresql://nodecg:nodecg@localhost:5432/nodecg?schema=public

# Redis (optional)
REDIS_URL=redis://localhost:6379

# RabbitMQ (optional)
RABBITMQ_URL=amqp://localhost:5672

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=change-me-in-production

# Asset Storage (S3/MinIO)
ASSET_PROVIDER=local # local, s3, minio
ASSET_BUCKET=nodecg-assets
ASSET_ENDPOINT=http://localhost:9000
ASSET_REGION=us-east-1
ASSET_ACCESS_KEY_ID=
ASSET_SECRET_ACCESS_KEY=
