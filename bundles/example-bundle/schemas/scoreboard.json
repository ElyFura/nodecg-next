{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "teamA": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "Team A",
          "maxLength": 50
        },
        "score": {
          "type": "integer",
          "default": 0,
          "minimum": 0
        },
        "logo": {
          "type": "string",
          "default": ""
        },
        "color": {
          "type": "string",
          "default": "#667eea",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        }
      },
      "required": ["name", "score"]
    },
    "teamB": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "Team B",
          "maxLength": 50
        },
        "score": {
          "type": "integer",
          "default": 0,
          "minimum": 0
        },
        "logo": {
          "type": "string",
          "default": ""
        },
        "color": {
          "type": "string",
          "default": "#764ba2",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        }
      },
      "required": ["name", "score"]
    },
    "visible": {
      "type": "boolean",
      "default": false
    }
  },
  "required": ["teamA", "teamB", "visible"],
  "additionalProperties": false
}
