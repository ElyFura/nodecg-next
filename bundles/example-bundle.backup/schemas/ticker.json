{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "messages": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "text": {
            "type": "string",
            "maxLength": 200
          },
          "priority": {
            "type": "string",
            "enum": ["low", "normal", "high", "urgent"],
            "default": "normal"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["id", "text", "timestamp"]
      },
      "maxItems": 50
    },
    "visible": {
      "type": "boolean",
      "default": false
    },
    "speed": {
      "type": "number",
      "default": 50,
      "minimum": 10,
      "maximum": 200,
      "description": "Scroll speed (pixels per second)"
    }
  },
  "required": ["messages", "visible", "speed"],
  "additionalProperties": false
}
