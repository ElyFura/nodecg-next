{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "duration": {
      "type": "integer",
      "default": 300,
      "minimum": 0,
      "description": "Timer duration in seconds"
    },
    "remaining": {
      "type": "integer",
      "default": 300,
      "minimum": 0,
      "description": "Remaining time in seconds"
    },
    "running": {
      "type": "boolean",
      "default": false
    },
    "visible": {
      "type": "boolean",
      "default": false
    },
    "countUp": {
      "type": "boolean",
      "default": false,
      "description": "Count up instead of down"
    },
    "label": {
      "type": "string",
      "default": "Timer",
      "maxLength": 50
    }
  },
  "required": ["duration", "remaining", "running", "visible"],
  "additionalProperties": false
}
