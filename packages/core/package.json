{
  "name": "@nodecg/core",
  "version": "0.1.0",
  "description": "NodeCG Next core server implementation",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "nodecg": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "keywords": [
    "nodecg",
    "core",
    "server"
  ],
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^5.1.0",
    "@as-integrations/fastify": "^3.1.0",
    "@aws-sdk/client-s3": "^3.700.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^9.0.1",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/static": "^8.0.2",
    "@graphql-tools/schema": "^10.0.29",
    "@nodecg/types": "workspace:*",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.1",
    "@opentelemetry/exporter-prometheus": "^0.208.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/instrumentation-fastify": "^0.53.0",
    "@opentelemetry/instrumentation-http": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@prisma/client": "^6.0.1",
    "@sentry/node": "^10.27.0",
    "bcrypt": "^6.0.0",
    "fastify": "^5.1.0",
    "graphql": "^16.12.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-ws": "^6.0.6",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.1.3",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.8.6",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.10",
    "prisma": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^4.0.10"
  }
}
